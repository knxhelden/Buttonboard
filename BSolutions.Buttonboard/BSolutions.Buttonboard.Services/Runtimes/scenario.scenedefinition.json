{
  "name": "Horrorhouse Szene 2",
  "version": 1,
  "steps": [
    {
      "name": "Audio Start",
      "atMs": 0,
      "action": "audio.play",
      "args": {
        "url": "http://.../Szene2.MP3",
        "player": "Player1"
      }
    },
    {
      "name": "Video NEXT",
      "atMs": 400,
      "action": "video.next",
      "args": { "player": "Mediaplayer5" }
    },
    {
      "name": "Video PAUSE",
      "atMs": 65400,
      "action": "video.pause",
      "args": { "player": "Mediaplayer5" }
    },
    {
      "name": "Strobo an",
      "atMs": 65400,
      "action": "mqtt.pub",
      "args": {
        "topic": "cmnd/.../strobo3/POWER",
        "payload": "ON"
      }
    },
    {
      "name": "Strobo aus",
      "atMs": 69400,
      "action": "mqtt.pub",
      "args": {
        "topic": "cmnd/.../strobo3/POWER",
        "payload": "OFF"
      }
    },
    {
      "name": "LED bottom center",
      "atMs": 69410,
      "action": "gpio.on",
      "args": { "pin": "Led.ButtonBottomCenter" }
    }
  ]
}