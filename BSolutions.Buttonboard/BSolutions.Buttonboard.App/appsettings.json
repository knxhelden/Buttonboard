{
  "Application": {
    "DisableSceneOrder": false,
    "OperationMode": "Real",
    "ScenarioAssetsFolder": "assets"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": { "Microsoft": "Warning" }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "/opt/buttonboard/logs/buttonboard-.clef",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14,
          "shared": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/opt/buttonboard/logs/live.log",
          "shared": true,
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 10485760,
          "retainedFileCountLimit": 3,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] [{SourceContext}] ({EventId}-{EventIdName}) {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
